#include <stdio.h>
#include <math.h>


int main(){
	
	int x1,y1,x2,y2;
	float uzaklik;
	
	printf("1.noktanin koordinatlarini giriniz(x,y):\n ");
	scanf("%d %d",&x1,&y1);
	printf("2.noktanin koordinatlarini giriniz(x,y):\n ");
	scanf("%d %d",&x2,&y2);
	
	uzaklik= sqrt(pow((y2-y1),2)+ pow((x2-x1),2));
	
	printf("Iki nokta arasi uzaklik: %f",uzaklik);
	

	return 0;
}
